---
---
[
  {% for type in site.types %}
    {
      "title"    : "{{ type.title | escape }}",
      "category" : "{{ type.categories | join: ' ' }}",
      "content"	 : "{{ type.content | strip_html | strip_newlines | remove:  "	" | escape | remove: "\" }}",
      "url"      : "{{ site.baseurl }}{{ type.url }}",
      "date"     : "{{ type.date }}"
    },
  {% endfor %}
  {% for page in site.pages %}
    {
      "title"    : "{{ page.title | escape }}",
      "category" : "{{ page.categories | join: ' ' }}",
      "content"	 : "{{ page.content | strip_html | strip_newlines | remove:  "	" | escape | remove: "\" }}",
      "url"      : "{{ site.baseurl }}{{ page.url }}",
      "date"     : "{{ page.date }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
